		<liquibase-spring.version>5.2.2.RELEASE</liquibase-spring.version>
		<liquibase-spring-data-jpa.version>2.2.3.RELEASE</liquibase-spring-data-jpa.version>
		<liquibase-property.file>${project.basedir}/liquibase/liquibase.properties</liquibase-property.file>
		<ojdbc6.version>11.2.0.4</ojdbc6.version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
